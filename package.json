{
	"name": "@yamaneyuta/serendipity-lib-frontend",
	"version": "0.8.4",
	"description": "",
	"private": true,
	"main": "dist/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "npm run clean",
		"build": "npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc -p ./tsconfig.cjs.json",
		"build:esm": "tsc -p ./tsconfig.esm.json",
		"ci:build": "tsc --skipLibCheck false -p ./tsconfig.cjs.json && tsc --skipLibCheck false -p ./tsconfig.esm.json",
		"clean": "rm -rf dist",
		"format": "eslint --fix src && prettier --write src",
		"lint": "eslint src && prettier --check src",
		"prepare": "npm run build",
		"release": "npx release-it",
		"start": "npm run watch",
		"update:package": "npx npm-check-updates -u --target minor",
		"watch": "tsc -w -p tsconfig.esm.json"
	},
	"keywords": [],
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.16.1",
		"@types/react": "^18.3.4",
		"@yamaneyuta/serendipity-constants": "github:yamaneyuta/serendipity-constants#0.8.4",
		"@yamaneyuta/serendipity-dev-conf": "github:yamaneyuta/serendipity-dev-conf#0.8.1",
		"jest-environment-jsdom": "^29.7.0",
		"ts-jest": "^29.2.5"
	},
	"peerDependencies": {
		"react": "^17.0.0 || ^18.0.0",
		"react-dom": "^17.0.0 || ^18.0.0"
	}
}
